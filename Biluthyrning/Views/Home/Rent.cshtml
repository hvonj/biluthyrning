@model Biluthyrning.Models.CarBookingVM;
@{
    string message = ViewData["message"].ToString();

}

<style>
    input[type=text], select {
        width: 100%;
        padding: 14px 30px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        width: 150px;
        margin: 5px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<h1>Rent a car</h1>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveBooking">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.Customer.Birthday" class="control-label">Customer:</label>
                <select class="form-control" asp-for="Booking.Customer.Id" asp-items="@Model.AllCustomers">
                    <option>Choose customer</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CarId" class="control-label">Reg Number</label>
                <select class="form-control" asp-for="Booking.CarId" asp-items="@Model.AllCars">
                    <option>Choose car</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.StartDate">Start Date</label>
                <input asp-for="Booking.StartDate" input type="date" class="form-control" />
                <span asp-validation-for="Booking.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.EndDate">End Date</label>
                <input asp-for="Booking.EndDate" input type="date" class="form-control" />
                <span asp-validation-for="Booking.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<h3>@message</h3>